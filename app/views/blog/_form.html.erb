<div class="blog_form_card" align="center">
  <%= form_for(@post, id: :post_form) do |f| %>

    <%= f.text_field :title, placeholder: "Title" %>

    <%= f.rich_text_area :content, value: (@post.body.present? ? @post.body : ""), placeholder: "Post something awesome...", class: :standard_text_area %>

    <p>
      <% form_button_id = rand 1000 %>
      <button type="submit" name="commit" class="standard_form_button post_form_button" id="post_form_button_<%= form_button_id %>">
        <b><%= @post.id.nil? ? "Post" : "Save" %> <i class="fa fa-pencil"></i></b>
      </button>
    </p>
    <br/>
  <% end %>
</div>
