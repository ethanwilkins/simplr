var filter_form = $("#shared_items_filter_form");
var filter_form_anchor = $("#shared_items_filter_form_anchor");

filter_form_anchor.after("<%=j render 'filter_form' %>");
filter_form.remove();

// resets results as well
var results = $("#shared_items");

var anchor = $("#shared_items_anchor");

results.remove();

anchor.before("<%=j render 'stacked' %>");

// ---------------------- _set_filter_field.js --------------------------------------------

var add_filter_field_link = $("#add_filter_field_link");
// saves original href to be appended to on select box change
var original_href = add_filter_field_link.attr('href');

$("#shared_item_field_select").change(function() {
  // saves value selected from select box
  var selected_value = this.value;
  // updates add filter link with href including selected value
  add_filter_field_link.attr('href', original_href + "?selected_filter_field=" + selected_value);

  add_filter_field_link.toggleClass('disabled_link', false);

  // runs on every select change
  window.navigator.vibrate(1);
});

// runs on every reset
window.navigator.vibrate(1);
