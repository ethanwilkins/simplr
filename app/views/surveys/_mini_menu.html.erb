<div class="post_mini_menu" id="survey_mini_menu_<%= survey.id %>">
  <% if own_item? survey or dev? %>
    <%= link_to 'Edit', edit_survey_path(survey), class: :post_mini_menu_link %>
    <%= link_to "Delete", surveys_path(survey), method: :delete, remote: true, class: :post_mini_menu_link,
      data: { confirm: "Are you sure you want to permanently delete this survey?" } %>
  <% end %>
</div>
